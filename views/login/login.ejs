<% include ../index_head %>
	<% if (message.length > 0) { %>
		<div class="alert alert-danger">Đăng nhập thất bại</div>
	<% } %>
	<div class="login-block">
		<div class="block block-transparent">
			<div class="content controls npt">
				<div class="head tac">                    
		            <a href="/"><img src="/back-end/img/logob.png"/></a>
		        </div>
		        <div class="head tac">
		        	<h1><span class="fa fa-sign-in"></span> Đăng nhập</h1>
		        </div>
				<form action="/login" method="post">
					<div class="form-row">
			            <div class="col-md-12">
			                <div class="input-group">
			                    <div class="input-group-addon">
			                        <span class="icon-user"></span>
			                    </div>
			                    <input type="text" class="form-control" placeholder="Login" name="email"/>
			                </div>
			            </div>
			        </div>
			        <div class="form-row">
			            <div class="col-md-12">
			                <div class="input-group">
			                    <div class="input-group-addon">
			                        <span class="icon-key"></span>
			                    </div>
			                    <input type="password" class="form-control" placeholder="Password" name="password"/>
			                </div>
			            </div>
			        </div>

					<div class="form-row">
			            <div class="col-md-6">
			                <a href="/signup" class="btn btn-default btn-block btn-clean">Đăng ký</a>                                
			            </div>
			            <div class="col-md-6">
			                <button type="submit" class="btn btn-default btn-block btn-clean">Đăng nhập</button>
			            </div>
			        </div>
			        <div class="form-row">
			            <div class="col-md-12">
			                <a href="/" class="btn btn-default btn-block btn-clean">Trang chủ</a>
			            </div>
			        </div>
				</form>
			</div>
		</div>
	</div>
<% include ../index_foter %>